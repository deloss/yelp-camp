<%- include('../partials/header') %>

<div class="container">

	<h1>
		Edit campground!
	</h1>
	<form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
		<div class="form-group">
			<label for="title">Title</label>
			<input class="form-control" name="title" placeholder="Title" type="text" id="title" value="<%= campground.title %>">
		</div>
		<div class="form-group">
			<label for="image-url">Image url</label>
			<input class="form-control" name="image" placeholder="Image URL" type="text" id="image-url" value="<%= campground.imageUrl %>">
		</div>
		<button type="submit" class="btn btn-large btn-primary">
			Submit
		</button>
	</form>	
	
</div>	

<%- include('../partials/footer') %>