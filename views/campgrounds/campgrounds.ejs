<%- include('../partials/header') %>

<div class="container">

<header class="jumbotron">
	<div class="container">
		<h1>
		Campgrounds list
		</h1>
		<p>
			Checkout the best campgrounds!
		</p>
		<a href="/campgrounds/new" class="btn btn-large btn-primary">Create new campground!</a>
	</div>
</header>	



<div class="row">
	
	</div>
<% campgrounds.forEach((campground) => { %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.imageUrl %>"></a>
			<div class="caption">
				<h4>
					<%= campground.title %>
				</h4>
			</div>
		</div>
	</div>
<% }) %>
	
</div>

<%- include('../partials/footer') %>