<%- include('../partials/header') %>

<div class="container">

<header class="jumbotron">
	<div class="container">
		<h1>
			YelpCamp Campgrounds
		</h1>
		<p>
			Checkout all the available campgrounds!
		</p>
		<% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
		<a href="/campgrounds/new" class="btn btn-large btn-primary">Create new campground!</a>
		<% } %>
	</div>
</header>	



<div class="row">
	
	</div>
<% campgrounds.forEach((campground) => { %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<img src="<%= campground.imageUrl %>">
			<div class="caption">
				<h4>
					<%= campground.title %>
				</h4>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-large btn-info">See more</a>
			</div>
		</div>
	</div>
<% }) %>
	
</div>

<%- include('../partials/footer') %>